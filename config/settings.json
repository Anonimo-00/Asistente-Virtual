{
    "app": {
        "name": "Central",
        "language": "es",
        "timezone": "Europe/Madrid"
    },
    "ui": {
        "max_width": 800,
        "message_width_ratio": 0.7,
        "theme_mode": "dark",
        "enable_voice": true,
        "voice_lang": "es"
    },
    "nlp": {
        "model": "gemini-1.5-flash",
        "temperature": 0.7,
        "max_tokens": 150
    },
    "backup": {
        "enabled": true,
        "auto_backup": true,
        "interval_hours": 24,
        "max_backups": 5,
        "backup_path": "backup/",
        "directories_to_backup": [
            "config",
            "data",
            "intents"
        ]
    }
}
