{
    "app": {
        "name": "Central",
        "language": "es",
        "timezone": "Colombia/Bogota",
        "directories": {
            "cache": "cache",
            "data": "data",
            "logs": "logs",
            "temp": "temp"
        }
    },
    "ui": {
        "max_width": 1200,
        "min_width": 400,
        "message_width_ratio": 0.85,
        "theme_mode": "dark",
        "enable_voice": true,
        "voice_lang": "es",
        "spacing": {
            "chat_padding": 20,
            "message_spacing": 12,
            "input_padding": 16
        },
        "border_radius": {
            "message": 20,
            "input": 24,
            "button": 12
        },
        "themes": {
            "dark": {
                "bg_primary": "#121212",
                "bg_secondary": "#1E1E1E",
                "accent": "#8ab4f8",
                "text_primary": "#FFFFFF",
                "text_secondary": "#B3B3B3",
                "surface": "#2D2D2D",
                "card_bg": "rgba(32, 33, 36, 0.95)",
                "error": "#CF6679",
                "success": "#03DAC6",
                "divider": "#3C4043",
                "shadow": "rgba(0, 0, 0, 0.3)",
                "input_bg": "#2D2D2D",
                "input_text": "#FFFFFF",
                "button_bg": "#3C4043",
                "button_text": "#FFFFFF",
                "hover": "rgba(255, 255, 255, 0.1)",
                "settings_bg": "#2D2D2D",
                "settings_text": "#FFFFFF",
                "settings_border": "#3C4043",
                "icon_color": "#FFFFFF"
            },
            "light": {
                "bg_primary": "#FFFFFF",
                "bg_secondary": "#F8F9FA",
                "accent": "#1A73E8",
                "text_primary": "#202124",
                "text_secondary": "#5F6368",
                "surface": "#FFFFFF",
                "card_bg": "rgba(255, 255, 255, 0.98)",
                "error": "#B00020",
                "success": "#0F9D58",
                "divider": "#E0E0E0",
                "shadow": "rgba(0, 0, 0, 0.1)",
                "input_bg": "#F8F9FA",
                "input_text": "#202124",
                "button_bg": "#F1F3F4",
                "button_text": "#202124",
                "hover": "rgba(0, 0, 0, 0.05)",
                "settings_bg": "#FFFFFF",
                "settings_text": "#202124",
                "settings_border": "#E0E0E0",
                "icon_color": "#5f6368"
            }
        },
        "animations": {
            "duration": 300,
            "curve": "ease_out",
            "initial_scale": 0.95,
            "initial_opacity": 0
        },
        "performance": {
            "enable_animations": true,
            "animation_duration": 150, // Reducido para mejor rendimiento
            "lazy_loading": true,
            "cache_messages": true,
            "max_cached_messages": 50, // Reducido para mejor gestión de memoria
            "update_interval": 100, // Nuevo: intervalo mínimo entre updates
            "batch_updates": true, // Nuevo: habilitar actualizaciones en lote
            "memory_management": {
                "clear_cache_interval": 300, // Limpiar cache cada 5 minutos
                "max_history_size": 100 // Límite de mensajes en historial
            }
        }
    },
    "nlp": {
        "model": "gemini-2.5-pro-exp-03-25",
        "temperature": 0.7,
        "max_tokens": 150
    },
    "backup": {
        "enabled": true,
        "auto_backup": true,
        "interval_hours": 24,
        "max_backups": 5,
        "backup_path": "cache/backups/",
        "directories_to_backup": [
            "config",
            "data",
            "intents"
        ]
    },
    "global_vars": {
        "save_intervals": {
            "wifi_status": 1,
            "theme_mode": 300,
            "is_active": 60,
            "last_activity": 60
        }
    },
    "cache": {
        "enabled": true,
        "directories": {
            "base": "cache",
            "web": "cache/web_cache",
            "skills": "cache/skills",
            "global_vars": "cache/global_vars"
        },
        "web_cache": {
            "enabled": true,
            "max_age": 3600,
            "max_size": 100000000,
            "cleanup_interval": 86400
        },
        "skill_cache": {
            "enabled": true,
            "max_age": 7200,
            "cleanup_interval": 43200
        }
    }
}
