{
    "app": {
        "name": "Central",
        "language": "es",
        "timezone": "Colombia/Bogota"
    },
    "ui": {
        "max_width": 1200,
        "min_width": 400,
        "message_width_ratio": 0.85,
        "theme_mode": "dark",
        "enable_voice": true,
        "voice_lang": "es",
        "spacing": {
            "chat_padding": 20,
            "message_spacing": 12,
            "input_padding": 16
        },
        "border_radius": {
            "message": 20,
            "input": 24,
            "button": 12
        },
        "themes": {
            "dark": {
                "bg_primary": "#121212",
                "bg_secondary": "#1E1E1E",
                "accent": "#8ab4f8",
                "text_primary": "#FFFFFF",
                "text_secondary": "#B3B3B3",
                "surface": "#2D2D2D",
                "card_bg": "rgba(32, 33, 36, 0.9)",
                "error": "#CF6679",
                "success": "#03DAC6",
                "divider": "#3C4043",
                "shadow": "rgba(0, 0, 0, 0.3)"
            },
            "light": {
                "bg_primary": "#FAFAFA",
                "bg_secondary": "#FFFFFF",
                "accent": "#1A73E8",
                "text_primary": "#202124",
                "text_secondary": "#5F6368",
                "surface": "#F8F9FA",
                "card_bg": "rgba(255, 255, 255, 0.95)",
                "error": "#B00020",
                "success": "#0F9D58",
                "divider": "#E0E0E0",
                "shadow": "rgba(0, 0, 0, 0.1)"
            }
        },
        "animations": {
            "duration": 300,
            "curve": "ease_out",
            "initial_scale": 0.95,
            "initial_opacity": 0
        },
        "performance": {
            "enable_animations": true,
            "animation_duration": 200,
            "lazy_loading": true,
            "cache_messages": true,
            "max_cached_messages": 100
        }
    },
    "nlp": {
        "model": "gemini-2.5-pro-exp-03-25",
        "temperature": 0.7,
        "max_tokens": 150
    },
    "backup": {
        "enabled": true,
        "auto_backup": true,
        "interval_hours": 24,
        "max_backups": 5,
        "backup_path": "backup/",
        "directories_to_backup": [
            "config",
            "data",
            "intents"
        ]
    }
}
